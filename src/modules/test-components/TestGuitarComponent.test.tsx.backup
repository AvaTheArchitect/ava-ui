import React from 'react';
import { render, screen, fireEvent } from '@testing-library/react';
import { TestGuitarComponent } from './TestGuitarComponent';

// ðŸŽ¸ Tests for TestGuitarComponent
// Module type: component
describe('TestGuitarComponent', () => {
  test('renders without crashing', () => {
    render(<TestGuitarComponent />);
    expect(screen.getByTestId('testguitarcomponent')).toBeInTheDocument();
  });

  test('displays component name', () => {
    render(<TestGuitarComponent />);
    expect(screen.getByText('ðŸŽ¸ TestGuitarComponent')).toBeInTheDocument();
  });

  test('handles start/stop actions', () => {
    const mockAction = jest.fn();
    render(<TestGuitarComponent onAction={mockAction} />);
    
    const startButton = screen.getByText(/start TestGuitarComponent/i);
    fireEvent.click(startButton);
    
    expect(mockAction).toHaveBeenCalledWith('start');
    expect(screen.getByText(/stop TestGuitarComponent/i)).toBeInTheDocument();
  });

  test('applies custom className', () => {
    const customClass = 'custom-test-class';
    render(<TestGuitarComponent className={customClass} />);
    
    const element = screen.getByTestId('testguitarcomponent');
    expect(element).toHaveClass(customClass);
  });


});